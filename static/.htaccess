###############################################
# LIEDJESKAART — .htaccess (optimized)
###############################################

RewriteEngine On
RewriteBase /liedjeskaart/

#############################################################
# 1) DIRECT DOORLATEN – JS / CSS / Assets / Tiles / JSON API
#############################################################
RewriteRule ^(build|_app|tiles|img|css|js|fonts)(/.*)?$ - [L]
RewriteRule ^(favicon\.png|manifest\.json)$ - [L]

# SvelteKit runtime JSON
RewriteRule ^_app/immutable/nodes/.+/__data\.json$ - [L]

#############################################################
# 2) BESTAANDE BESTANDEN OF DIRECTORIES SERVEN
#############################################################
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

#############################################################
# 3) SPA FALLBACK
#############################################################
RewriteCond %{REQUEST_URI} !^/_app/
RewriteCond %{REQUEST_URI} !^/build/
RewriteRule ^ index.html [QSA,L]

#############################################################
# 4) CACHING
#############################################################
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"
</IfModule>

<IfModule mod_headers.c>

  # Hashed assets — 1 jaar
  <FilesMatch "\.(js|css|png|jpe?g|webp|avif|svg|gif|woff2?|ttf|eot|ico|json)$">
    Header set Cache-Control "public, immutable, max-age=31536000"
  </FilesMatch>

  # HTML NOOIT cachen
  <FilesMatch "\.html$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
  </FilesMatch>
</IfMod
